<head>
  <title>Ultimate Hackathon League - Teams</title>
</head>

<body>
  <h1>Teams</h1>

  <div class="add-team">
    <p class="btn">
      <a class="btn-add-team" href="/teams/new">Add a Team</a>
    </p>
  </div>

  <div class="teams-list">
    <% @teams.each do |team| %>
      <div class="teams-container">
        <div class="team-top-row">
          <a class="team-name"><%= team.name %></a>
        </div>
        <div class="team-middle-row">
          <a class="team-fixtures-list">Previous matches: __</a>
        </div>
        <div class="team-bottom-row"
          <a class="btn-edit" href="/teams/<%= team.id %>/edit">Edit</a>
          <form class="btn-delete" method="post" action="/teams/<%= team.id %>/delete">
            <input type="submit" value="Delete"/>
          </form>
        </div>
      </div>
    <% end %>
  </div>

</body>
